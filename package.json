{
  "name": "bun-mcp-server",
  "version": "3.2.1",
  "description": "MCP server for Bun documentation",
  "module": "index.ts",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "bun-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "mcp",
    "bun",
    "documentation",
    "model-context-protocol"
  ],
  "author": "chikingsley",
  "license": "MIT",
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chikingsley/bun-mcp-server.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.9",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsc-files": "^1.1.4",
    "typescript-eslint": "^8.55.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.25.0"
  },
  "scripts": {
    "build": "bun build index.ts --production --target=bun --outfile=dist/index.js",
    "build:dev": "bun build index.ts --sourcemap=inline --target=bun --outfile=dist/index.js",
    "prepublishOnly": "bun run build",
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/*.test.ts",
    "test:e2e": "bun test tests/e2e.test.ts --timeout 30000"
  },
  "lint-staged": {
    "*.ts": [
      "tsc-files --noEmit",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
